<!DOCTYPE html>
<html>
  <head>
    <title>PETSYGrafikart</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
      <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
              <a href="<%= root_path %>" class="navbar-brand">Petsy</a>
            </div>
            <% if isAdmin? %>
            <ul class="nav navbar-nav">
             <li>
             <%= link_to 'Gestion des especes', [:admin, Species] %>
                <a href="#">Gestion des especes</a>
            </li>
            </ul>
            <% end %>
            <ul class="nav navbar-nav navbar-right">
                    <% if user_signed_in? %>
                        <li class="dropdown"></li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"></a>
                        <%= current_user.username %>
                        <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li><%= link_to "Mon profil", profil_path %></li>
                            <li><%= link_to 'Se deconnecter', destroy_session_path, data: {metod: :delete} %></li>
                    <% else %>

                    <% end %>
              <li><a href="<%= new_user_path %>"> s'inscrire </a></li>
              <li><a href="<%= new_session_path %>"> Se conecter </a></li>
            </ul>
        </div>
      </div

      <div class="container">

      <% if flash[:success] = "Successfully created..." %>
          <div class="alert alert-success">
              <%= flash[:success] %>
          </div>
      <% end %>

        <% if flash[:danger] = "Successfully created..." %>
            <div class="alert alert-danger">
                <%= flash[:danger] %>
            </div>
        <% end %>

        <%= yield %> 

        <%= debug session[:auth] %>
      </div>
         

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  </body>
</html>

